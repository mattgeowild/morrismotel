---
import "../../style/tailwind.css"
import Navbar from "@components/Navbar";
import Footer from "@components/Footer";
import ThemeChange from "@components/ThemeChange";
import Head from '@components/Head'
const {title} = Astro.props;
const {desc} = Astro.props;
const {img} = Astro.props;
---
<html lang="en">
<Head
	title={title}
	desc={desc}
	img={img}
>
	<script src="https://cdn.jsdelivr.net/npm/theme-change@2.0.2/index.js"></script>
	<link rel="preconnect" href="https://api.fonts.coollabs.io" crossorigin>
	<link href="https://api.fonts.coollabs.io/css2?family=Public+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	
</Head>
<body class="flex flex-col items-center h-screen">
	<div class="w-full max-w-3xl flex-grow">
		<Navbar>
			<ThemeChange />
		</Navbar>
		<div class="p-4 pb-10">
			<div class="prose lg:prose-lg">
				<slot />
			</div>
		</div>
	</div>
	<Footer />
</body>
</html>