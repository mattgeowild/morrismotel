---
import Article from "../components/article.astro";
const props = Astro.props;
const post = props.post;
const allPosts = await Astro.glob('../pages/posts/**/*.md');
const filtered = allPosts.filter((el) => post.content.tags.some(x => el.frontmatter.tags.includes(x)) && (post.content.title !== el.frontmatter.title))
---
{filtered.map((p) => <div class="carousel-item"><Article post={p} /></div>)}