---
const siteInfo = {
	siteName: 'Morris Motel',
	siteDesc: 'Sail the Seven Seas',
}

const content = Astro.props;
let title = content?.title;
let desc = content?.desc;
let img = content?.img;
let twitterUsername = content?.twitterUsername;

if (!title) title = siteInfo.siteName
if (!desc) desc = siteInfo.siteDesc
if (!img) img = Astro.site + 'card.png'
---

<head>

	<!-- essential -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />

	<!-- core -->
	{title && <title>{title}</title>}
	{desc &&
	<meta name="description" content={desc}>}
	<!-- twitter -->
	<meta name="twitter:card" content="summary_large_image" />
	{title &&
	<meta name="twitter:title" content={title} />}
	{desc &&
	<meta name="twitter:description" content={desc} />}
	<meta name="twitter:image" content={img} />
	{title &&
	<meta name="twitter:image:alt" content={title} />}
	{twitterUsername &&
	<meta name="twitter:site" content={twitterUsername} />}
	{twitterUsername &&
	<meta name="twitter:creator" content={twitterUsername} />}
	<!-- og -->
	{title &&
	<meta property="og:title" content={title} />}
	{desc &&
	<meta property="og:description" content={desc} />}
	<meta property="og:image" content={img} />
	{title &&
	<meta property="og:image:alt" content={title} />}
	{title &&
	<meta property="og:site_name" content={title} />}
	<meta property="og:type" content="object" />
	<meta property="og:url" content={Astro.site} />


	<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
	<link rel="manifest" href="/favicons/site.webmanifest">
	<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#fff">
	<meta name="msapplication-TileColor" content="#fff">
	<meta name="theme-color" content="#000">

	<script src="https://cdn.jsdelivr.net/npm/theme-change@2.0.2/index.js"></script>
	<slot />
</head>