---
import { getReadingTime } from "../lib/readingtime.js";
import { dateFilter } from "../lib/dateFilter.js";
const content = Astro.props.post;
---

<article class="flex justify-between px-4 py-4 md:flex-col-reverse">
  <div class="flex flex-col flex-1">
    <a href={content?.url} class="flex-1">
      <h3 class="text-xl font-medium leading-6 ease-in-out group-hover:text-barbie" set:html={content?.title}></h3>
    </a>
    <p class="flex flex-wrap items-center text-sm">
      {dateFilter(content.date)}
    </p>
  </div>
  <a
    href={content?.url}
    class="flex-none w-24 h-24 mb-0 ml-6 md:ml-0 md:h-auto md:w-auto aspect-none md:aspect-w-19 md:aspect-h-1 md:mb-4"
  >
    <img
      class="object-cover w-full h-full transition-opacity rounded-xl drop-shadow group-hover:opacity-90"
      alt={content?.title}
      src={content?.img ?? "/images/fallback.png"}
    />
  </a>
</article>
