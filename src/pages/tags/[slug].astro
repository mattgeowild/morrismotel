---
import Tags from '../../components/Tags.astro';
import Article from '../../components/article.astro';
import { getAllPosts } from '../../lib/posts.js';

// console.log(getAllPosts())
export async function getStaticPaths({ rss }) {
    const allPosts = (await getAllPosts())
      .filter((a) => new Date(a.date) <= new Date());

  const allTags = [
    ...new Set(
      allPosts.reduce((prev, post) => {
        prev = prev.concat(post.tags);
        return prev;
      }, [])
    ),
  ];

  rss({
    title: 'Morris Motel',
    description: 'Sail the seven seas.',
    items: allPosts.map((post) => ({
      title: post.title,
      description: post.desc,
      link: post.url,
      pubDate: post.date,
    })),
    dest: 'sitemap.xml',
  });

  return allTags.map((tag) => {
    const postsForTag = allPosts.filter((post) => post.tags.includes(tag));
    return {
      params: { slug: tag },
      props: { allTags, postsForTag },
    };
  });
}

const { slug } = Astro.params;
const { allTags, postsForTag } = Astro.props.post;
---

  <header class="container mx-auto my-6">
    <h1 class="mb-8 text-4xl font-extrabold text-gray-900 dark:text-white">
      All posts tagged with \#{slug}
    </h1>
  </header>

  <Tags />

  <section
    class="mb-10 -mx-4"
  >
    <div class="container md:mx-auto">
      <div class="grid grid-cols-1 mx-0 md:-mx-4 md:grid-cols-2 md:py-4">
        {postsForTag.map((post) => <Article post={post} />)}
      </div>
    </div>
  </section>